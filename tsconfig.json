{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "outDir": "./dist",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
